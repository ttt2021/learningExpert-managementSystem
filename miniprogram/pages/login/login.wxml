<!--miniprogram/pages/login/login.wxml-->
<view class="container">
	<view class="login-icon">
		<image class="login-img" src="../../images/logo.png"></image>
	</view>
	<view class="login-from">
		<!-- 账号 -->
		<view class="inputView">
			<image class="name-icon" src="../../images/name.png" />
			<label class="login-lab">账号</label>
			<input
			 type="text"
			 class="inputText"
			 placeholder="请输入账号"
			 bindinput="inputAccount"
			/>
		</view>

		<view class="line"></view>

		<!-- 密码 -->
		<view class="inputView">
			<image class="pwd-icon" src="../../images/password.png"></image>
			<label class="login-lab">密码</label>
			<input
			 type="text"
			 class="inputText"
			 placeholder="请输入密码"
			 password="true"
			 bindinput="inputPwd"
			/>
		</view>

		<!-- 按钮 -->
		<view class="login-btn">
			<button
			 class="loginBtn"
			 type="primary"
			 bindtap="login"
			>登录
			</button>
		</view>
	</view>
</view>

